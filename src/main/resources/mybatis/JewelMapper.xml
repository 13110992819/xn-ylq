<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.zhpay.dao.IJewelDAO">
	<resultMap id="jewel_DB_Result" type="jewel">
		<result column="code" property="code" />
		<result column="template_code" property="templateCode" />
		<result column="periods" property="periods" />
		<result column="currency" property="currency" />
		<result column="amount" property="amount" />
		
		<result column="total_num" property="totalNum" />
		<result column="price" property="price" />
		<result column="max_invest_num" property="maxInvestNum" />
		<result column="adv_text" property="advText" />
		<result column="adv_pic" property="advPic" />
		
		<result column="invest_num" property="investNum" />
		<result column="create_datetime" property="createDatetime" />
		<result column="win_number" property="winNumber" />
		<result column="win_user" property="winUser" />
		<result column="win_datetime" property="winDatetime" />
		<result column="status" property="status" />
		<result column="system_code" property="systemCode" />
		
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="templateCode != null and templateCode != '' ">
				AND t.template_code = #{templateCode}
			</if>
			<if test="nameForQuery != null and nameForQuery != '' ">
				AND t.name like "%"#{nameForQuery}"%"
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="createDatetime != null and createDatetime != '' ">
				AND t.create_datetime = #{createDatetime}
			</if>
			<if test="systemCode != null and systemCode != '' ">
				AND t.system_code = #{systemCode}
			</if>
		</trim>
	</sql>
	<select id="select_jewel" parameterType="jewel" resultMap="jewel_DB_Result">
		SELECT
		code
		,template_code
		,periods
		,currency
		,amount
		
		,total_num
		,price
		,max_invest_num
		,adv_text
		,adv_pic
		
		,invest_num
		,create_datetime
		,win_number
		,(select nickname from ${userDB}.tstd_user tu where tu.user_id=t.win_user) as win_user
		,win_datetime
		
		,status
		,system_code
		FROM
		tact_jewel t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				${order}
			</if>
		</trim>
	</select>
	
	<select id="select_jewel_count" parameterType="jewel"
		resultType="java.lang.Long">
		SELECT count(1) FROM tact_jewel t 
		<include refid="where_condition" />
	</select>

	<insert id="insert_jewel" parameterType="jewel">
		INSERT INTO
		tact_jewel(
		code
		,template_code
		,periods
		,currency
		,amount
		,total_num
		
		,price
		,max_invest_num
		,adv_text
		,adv_pic
		,create_datetime
		
		,status
		,system_code
		)
		VALUES(
		#{code}
		,#{templateCode}
		,#{periods}
		,#{currency}
		,#{amount}
		,#{totalNum}
		
		,#{price}
		,#{maxInvestNum}
		,#{advText}
		,#{advPic}
		,#{createDatetime}
		
		,#{status}
		,#{systemCode}
		)
	</insert>
	
	<update id="update_status" parameterType="jewel">
		UPDATE tact_jewel
		SET
		status=#{status}
		WHERE code = #{code}
	</update>
	
	<update id="update_investInfo" parameterType="jewel">
		UPDATE tact_jewel
		SET
		invest_num = #{investNum}
		WHERE code = #{code}
	</update>
	
	<update id="update_winInfo" parameterType="jewel">
		UPDATE tact_jewel
		SET
		win_number = #{winNumber}
		,win_user = #{winUser}
		,win_datetime = #{winDatetime}
		,status = #{status}
		WHERE code = #{code}
	</update>
	
	
	<delete id="delete_jewel" parameterType="jewel">
		DELETE FROM
		tact_jewel
		WHERE
		code = #{code}
	</delete>
</mapper>
