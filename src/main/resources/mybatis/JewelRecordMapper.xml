<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.zhpay.dao.IJewelRecordDAO">
	<resultMap id="jewelRecord_DB_Result" type="jewelRecord">
		<result column="code" property="code" />
		<result column="user_id" property="userId" />
		<result column="mobile" property="mobile" />
		<result column="nickname" property="nickname" />
		<result column="photo" property="photo" />
		<result column="jewel_code" property="jewelCode" />
		
		<result column="invest_datetime" property="investDatetime" />
		<result column="my_invest_times" property="myInvestTimes" />
		<result column="times" property="times" />
		<result column="pay_amount" property="payAmount" />
		<result column="pay_datetime" property="payDatetime" />
		
		<result column="status" property="status" />
		<result column="remark" property="remark" />
		<result column="ip" property="ip" />
		<result column="pay_group" property="payGroup" />
		<result column="pay_code" property="payCode" />
		<result column="company_code" property="companyCode" />
		<result column="system_code" property="systemCode" />
	</resultMap>
	
	<resultMap id="jewel_DB_Result" type="jewel">
		<result column="code" property="code" />
		<result column="template_code" property="templateCode" />
		<result column="periods" property="periods" />
		<result column="currency" property="currency" />
		<result column="amount" property="amount" />
		
		<result column="total_num" property="totalNum" />
		<result column="price" property="price" />
		<result column="max_invest_num" property="maxInvestNum" />
		<result column="adv_text" property="advText" />
		<result column="adv_pic" property="advPic" />
		
		<result column="invest_num" property="investNum" />
		<result column="create_datetime" property="createDatetime" />
		<result column="win_number" property="winNumber" />
		<result column="win_user" property="winUser" />
		<result column="win_datetime" property="winDatetime" />
		<result column="status" property="status" />
		<result column="system_code" property="systemCode" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="jewelCode != null and jewelCode != '' ">
				AND t.jewel_code = #{jewelCode}
			</if>
			<if test="status != null and status != '' ">
			    AND t.status = #{status}
			</if>
			<if test="payGroup != null and payGroup != '' ">
				AND t.pay_group = #{payGroup}
			</if>
			
			<if test="payCode != null and payCode != '' ">
				AND t.pay_code = #{payCode}
			</if>
			<if test="systemCode != null and systemCode != '' ">
				AND t.system_code = #{systemCode}
			</if>
		</trim>
	</sql>
	<select id="select_jewelRecord" parameterType="jewelRecord" resultMap="jewelRecord_DB_Result">
		SELECT
		t.code
		,t.user_id
		,tu.mobile
		,tu.nickname
		,tue.photo
		,t.jewel_code
		,t.invest_datetime
		,t.times
		,t.pay_amount
		,t.pay_datetime
		,t.status
		,t.remark
		,t.ip
		,t.pay_group
		,t.pay_code 
		,t.system_code
		FROM
		tact_jewel_record t LEFT JOIN ${userDB}.tstd_user tu ON t.user_id = tu.user_id  
		                    LEFT JOIN ${userDB}.tstd_user_ext tue ON tu.user_id = tue.user_id
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	
	<select id="select_jewelRecord_count" parameterType="jewelRecord"
		resultType="java.lang.Long">
		SELECT count(1) FROM tact_jewel_record t 
		<include refid="where_condition" />
	</select>
	
	<select id="select_myjewel" parameterType="jewelRecord" resultMap="jewelRecord_DB_Result">
		SELECT
		t.code
		,t.template_code
		,t.periods
		,t.currency
		,t.amount
		
		,t.total_num
		,t.price
		,t.max_invest_num
		,t.adv_text
		,t.adv_pic
		
		,t.invest_num
		,t.create_datetime
		,t.win_number
		,t.win_datetime
		
		,t.status
		,t.system_code
		FROM
		tact_jewel t
		LEFT JOIN tact_jewel_record tjr ON  t.code = tjr.jewel_code 
		WHERE tjr.status not in(0) 
		GROUP BY t.jewel_code 
	</select>
	
	<select id="select_myjewel_count" parameterType="jewelRecord"
		resultType="java.lang.Long">
		SELECT count(1) FROM
		tact_jewel t
		LEFT JOIN tact_jewel_record tjr ON  t.code = tjr.jewel_code 
		WHERE tjr.status not in(0) 
		GROUP BY t.jewel_code 
	</select>
	
	<insert id="insert_jewelRecord" parameterType="jewelRecord">
		INSERT INTO
		tact_jewel_record(
		code
		,user_id
		,jewel_code
		,invest_datetime
		,times
		
		,pay_amount
		,pay_datetime
		,status
		,remark
		,ip
		
		,pay_group
		,system_code
		)
		VALUES(
		#{code}
		,#{userId}
		,#{jewelCode}
		,#{investDatetime}
		,#{times}
		
		,#{payAmount}
		,#{payDatetime}
		,#{status}
		,#{remark}
		,#{ip}
		
		,#{payGroup}
		,#{systemCode}
		)
	</insert>
	
	<update id="update_status" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		status=#{status}
		,remark=#{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_pay_status" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		status = #{status}
		,pay_code = #{payCode}
		,pay_datetime = #{payDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_lostInfo" parameterType="jewelRecord">
		UPDATE tact_jewel_record
		SET
		status=#{status}
		,remark=#{remark}
		WHERE jewel_code = #{jewelCode} and code != #{code} and status != 0
	</update>
	
	<select id="select_totalAmount" parameterType="jewelRecord"
		resultType="java.lang.Long">
		SELECT sum(pay_amount) FROM tact_jewel_record t
		<include refid="where_condition" />
	</select>
</mapper>
