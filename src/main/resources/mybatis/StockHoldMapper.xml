<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xnjr.mall.dao.IStockHoldDAO">
	<resultMap id="stockHold_DB_Result" type="stockHold">
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="stock_code" property="stockCode" />
		<result column="status" property="status" />
		<result column="back_num" property="backNum" />
		<result column="back_welfare1" property="backWelfare1" />
		<result column="back_welfare2" property="backWelfare2" />
		<result column="next_back" property="nextBack" />
		<result column="pay_code" property="payCode" />
		<result column="system_code" property="systemCode" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test='userList != null and userList.size() > 0'>
				AND t.user_id in 
                <foreach item="item" index="index" collection="userList" open="(" separator="," close=")">
	            	#{item}
                </foreach> 
			</if>
			<if test="status != null and status != '' ">
				<choose>
					<when test='status == "effect"'>
						AND t.status in(1,2)
					</when>
				    <otherwise>
						AND t.status = #{status}
					</otherwise>
				</choose>
			</if>
			<if test="payCode != null and payCode != '' ">
				AND t.pay_code = #{payCode}
			</if>
		</trim>
	</sql>
	<select id="select_stockHold" parameterType="stockHold" resultMap="stockHold_DB_Result">
		SELECT
		t.id
		,t.user_id
		,t.stock_code
		,t.status
		,t.back_num
		,t.back_welfare1
		,t.back_welfare2
		,t.next_back
		,t.pay_code
		,t.system_code
		FROM
		tact_stock_hold t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_stockHold_count" parameterType="stockHold"
		resultType="java.lang.Long">
		SELECT count(1) FROM tact_stock_hold t
		<include refid="where_condition" />
	</select>

	<insert id="insert_stockHold" parameterType="stockHold">
		INSERT INTO
		tact_stock_hold(
		user_id
		,stock_code
		,status
		,back_num
		,back_welfare1
		,back_welfare2
		,next_back
		,pay_code
		,system_code
		)
		VALUES(
		#{userId}
		,#{stockCode}
		,#{status}
		,#{backNum}
		,#{backWelfare1}
		,#{backWelfare2}
		,#{nextBack}
		,#{payCode}
		,#{systemCode}
		)
	</insert>

	<update id="update_stockHold" parameterType="stockHold">
		UPDATE tact_stock_hold
		SET
		status = #{status}
		,back_num = #{backNum}
		,back_welfare1 = #{backWelfare1}
		,back_welfare2 = #{backWelfare2}
		,next_back = #{nextBack}
		WHERE id = #{id}
	</update>
	
	<update id="update_stockHold_status" parameterType="stockHold">
		UPDATE tact_stock_hold
		SET
		status = #{status}
		WHERE id = #{id}
	</update>
</mapper>